{
  "name": "responsive-chrome-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@dnd-kit/core": "^3.1.1",
    "@dnd-kit/sortable": "^4.0.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@hookform/resolvers": "^2.8.8",
    "@mui/icons-material": "^5.4.1",
    "@mui/material": "^5.4.1",
    "@reduxjs/toolkit": "^1.7.2",
    "array-move": "^2.1.0",
    "file-saver": "^2.0.5",
    "husky": "^3.1.0",
    "jszip": "^3.7.1",
    "konva": "^8.3.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-custom-scrollbars-2": "^4.4.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.26.1",
    "react-konva": "^17.0.2-5",
    "react-redux": "^7.2.6",
    "react-scripts": "^3.0.1",
    "redux": "^4.1.2",
    "redux-saga": "^1.1.3",
    "rewire": "^6.0.0",
    "scroll-into-view": "^1.9.7",
    "use-image": "^1.0.8",
    "uuid": "^3.3.3",
    "validator": "^13.7.0",
    "yup": "^0.32.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "REACT_APP_PLATFORM=CHROME INLINE_RUNTIME_CHUNK=false node ./build-non-split.js && npm run build:browser",
    "build:chrome": "cross-env REACT_APP_PLATFORM=CHROME && npm run build:browser",
    "build:firefox": "cross-env REACT_APP_PLATFORM=FIREFOX && npm run build:browser",
    "build:browser": "cross-env REACT_APP_PLATFORM=CHROME npm run build:background && npm run build:inject && npm run build:manifest && npm run build:init",
    "build:background": "cross-env REACT_APP_PLATFORM=CHROME webpack --mode production ./src/background/index.ts --output ./build/background.js",
    "build:inject": "cross-env REACT_APP_PLATFORM=CHROME webpack --mode production ./src/background/inject.ts --output ./build/inject.js",
    "build:init": "cross-env REACT_APP_PLATFORM=CHROME webpack --mode production ./src/background/init.ts --output ./build/init.js",
    "build:manifest": "cp ./public/manifest.json ./build/manifest.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pretty": "prettier --check 'src/**/*.ts' --write"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.178",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.16",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/scroll-into-view": "^1.16.0",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.1",
    "cross-env": "^6.0.3",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
