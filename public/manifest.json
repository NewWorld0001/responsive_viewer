{
  "manifest_version": 2,
  "name": "ResponsiveViewer",
  "author": "Solaiman Kmail",
  "version": "1.0.3",
  "description": "Show multiple screens once.",
  "icons": {
    "128": "16.png"
  },
  "browser_action": {
    "default_icon": "16.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "browsingData",
    "webNavigation",
    "management",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://cdn.carbonads.com https://srv.carbonads.net/ads/ ;object-src 'self'"
}
